<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/animalImage"
        android:layout_width="90dp"
        android:layout_height="92dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/textViewRace"
        android:layout_width="160dp"
        android:layout_height="34dp"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="36dp"
        android:layout_toStartOf="@+id/messageButtonAnimal"
        android:text="TextView"
        android:textStyle="bold" />

    <Button
        android:id="@+id/messageButtonAnimal"
        android:layout_width="78dp"
        android:layout_height="44dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="14dp"
        android:layout_marginTop="87dp"
        android:background="@drawable/buttonshapes"
        android:baselineAligned="false"
        android:shadowColor="#8A6367"
        android:shadowDx="0"
        android:shadowDy="-1"
        android:shadowRadius="5"
        android:text="Mesaj"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse"
        android:textSize="15dp">
    </Button>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="144dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/textViewkonum"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textViewRace"
        android:layout_alignParentTop="true"
        android:layout_marginTop="78dp"
        android:text="TextView" />

</RelativeLayout>
