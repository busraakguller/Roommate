<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPasswordActivity"
    tools:layout_editor_absoluteY="25dp">

    <include
        android:id="@+id/forgot_password_toolbar"
        layout="@layout/app_bar_layout">

    </include>


    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="56dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="131dp"
        android:text=" E-mail girin"
        app:layout_constraintBottom_toTopOf="@+id/forgotEditTextMail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/forgotEditTextMail"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginBottom="76dp"
        android:layout_marginEnd="56dp"
        android:layout_marginStart="56dp"
        android:hint="email"
        app:bootstrapBrand="primary"
        app:bootstrapSize="md"
        app:layout_constraintBottom_toTopOf="@+id/loginButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:ignore="MissingConstraints,UnknownId" />

    <Button
        android:id="@+id/loginButton"

        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginBottom="236dp"
        android:layout_marginEnd="62dp"
        android:layout_marginStart="62dp"
        android:background="@drawable/buttonshapes"
        android:shadowColor="#8A6367"
        android:shadowDx="0"
        android:shadowDy="-1"
        android:shadowRadius="5"
        android:text="GÃ¶nder"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forgotEditTextMail"
        tools:ignore="MissingConstraints" />
</android.support.constraint.ConstraintLayout>